font-family = Maple Mono
font-style = Maple Mono
font-size = 12

mouse-scroll-multiplier = 1

theme = ayu-dark
background-opacity = 0.93
minimum-contrast = 1.1
macos-icon = custom-style
macos-titlebar-style = tabs
macos-window-shadow = false

# Window Styling
window-decoration = none
window-padding-x = 12
window-padding-y = 12
window-width = 226
window-height = 69
window-position-x = 128
window-position-y = 173

# Quick Terminal
quick-terminal-position = top
quick-terminal-size = 100%,100%

# Bar non-blinking cursor
adjust-cursor-thickness = 2
cursor-style = block
cursor-style-blink = false
shell-integration = zsh
shell-integration-features = no-cursor
mouse-hide-while-typing = true

window-save-state = always

clipboard-trim-trailing-spaces = true
copy-on-select = clipboard

# It interferes with some accessibility features like Touch ID
macos-auto-secure-input = false

# Hot keys
# Toggle the "quick" terminal globally from the top
# NOTE: global is MacOS only feature
keybind = global:cmd+backquote=toggle_quick_terminal

# Delete the whole line
keybind = super+backspace=text:\x15s
# Insert newline

command = ~/.config/ghostty/ghostty_tmux.sh
